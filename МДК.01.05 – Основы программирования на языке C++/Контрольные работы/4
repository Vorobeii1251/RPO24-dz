#include <iostream>
#include <chrono>

int main() {
    const int N = 10000000;

    // Замер времени простого цикла
    auto start = std::chrono::steady_clock::now();
    volatile long long sum = 0; // volatile чтобы исключить оптимизацию
    for (int i = 0; i < N; ++i) {
        sum += i;
    }
    auto end = std::chrono::steady_clock::now();
    auto duration_ms = std::chrono::duration_cast<std::chrono::milliseconds>(end - start).count();
    std::cout << "Время выполнения цикла суммы: " << duration_ms << " мс" << std::endl;

    // Замер времени с вычислением квадратов
    start = std::chrono::steady_clock::now();
    volatile long long sumSquares = 0;
    for (int i = 0; i < N; ++i) {
        sumSquares += i * i;
    }
    end = std::chrono::steady_clock::now();
    duration_ms = std::chrono::duration_cast<std::chrono::milliseconds>(end - start).count();
    std::cout << "Время выполнения цикла квадратов: " << duration_ms << " мс" << std::endl;

    return 0;
}
